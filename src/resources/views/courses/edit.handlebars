<div class="mt-5">
    <h4>CAP NHAP KHÓA HỌC</h4>
    <form method="POST" action="/courses/{{courses._id}}?_method=PUT">
    <div class="form-group">
        <label for="name">New's course</label>
        <input type="text" name="name" class="form-control" id="name"  value="{{courses.name}}">
    </div>   
       <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" id="description"  value="{{courses.description}}">
    </div>   
       <div class="form-group">
        <label for="videoID">VideoID</label>
        <input type="text" name="videoID" class="form-control" id="videoID"  value="{{courses.videoID}}">
    </div>  
    <div class="form-group">
        <label for="level">Level</label>
        <input type="text" name="level" class="form-control" id="level"  value="{{courses.level}}">
    </div>   
    <button type="submit" class="btn btn-primary">Them khoa hoc</button>
    </form>
</div> 

